<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>About Us</title>
</head>
<body style="background-image: url('https://raw.githubusercontent.com/Unonkgw/my-images/c6d40969dd0f26a35a36ace6a61dca87c687533b/orangebeam2.svg'); background-size: cover; background-attachment: fixed;">

<!-- mission, vision, and approach -->
<section class="content-section">
  <div class="section-container">
    
    <!-- mission card -->
    <div class="mission-card" style="margin: 0.5rem 0; padding: 1.5rem;">
      <h2 class="section-title">Our Mission</h2>
      <p style="color: #063c25;"><%= aboutPage.mission %></p>
    </div>

    <!-- vision card -->
    <div class="mission-card" style="margin: 0.5rem 0; padding: 1.5rem;">
      <h2 class="section-title">Our Vision</h2>
      <p style="color: #063c25;"><%= aboutPage.vision %></p>
    </div>

    <!-- approach card -->
    <div class="mission-card" style="margin: 0.5rem 0; padding: 1.5rem;">
      <h2 class="section-title">Our Approach</h2>
      <p style="color: #063c25;"><%= aboutPage.approach %></p>
    </div>

  </div>
</section>

<!-- stats section -->
<section class="stats-section" style="border-radius: 20px">
  <div class="section-container">
    <div class="stats-grid">
      <% aboutPage.stats.forEach(stat => { %>
        <div class="stat-item">
          <span class="stat-number"><%= stat.number %></span>
          <span class="stat-label"><%= stat.label %></span>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- core values section -->
<section class="content-section">
  <div class="section-container">
    <h2 class="section-title" style="color: #f1f6f3">Our Core Values</h2>
    <div class="values-grid">
      <% aboutPage.values.forEach(value => { %>
        <div class="value-card">
          <div class="value-icon"><%= value.icon %></div>
          <h4><%= value.title %></h4>
          <p><%= value.desc %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- team section -->
<section class="team-section">
  <div class="section-container">
    <h2 class="section-title" style="color: #f1f6f3">Meet Our Team</h2>
    <div class="team-grid">
      <% team.forEach(member => { %>
        <div class="team-card">
          <div class="team-avatar">ðŸ‘·</div>
          <h4><%= member.name %></h4>
          <p><%= member.engr %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

</body>
</html>